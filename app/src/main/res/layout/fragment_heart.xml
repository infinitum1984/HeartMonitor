<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".heart.HeartFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/heartGif"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:src="@drawable/heart_img" />

    <TextView
        android:id="@+id/heartRateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heartGif"
        tools:text="60" />

    <Button
        android:id="@+id/masureBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Виміряти"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heartRateTv" />

    <ProgressBar
        android:id="@+id/masureProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/masureBt" />

    <TextView
        android:id="@+id/masureInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вимірювання"
        app:layout_constraintEnd_toEndOf="@+id/masureProgressBar"
        app:layout_constraintStart_toStartOf="@+id/masureProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/masureProgressBar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Результат вимірювання:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/masureInfo" />

    <TextView
        android:id="@+id/masuredTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:textSize="18sp"
        tools:text="60" />

    <TextView
        android:id="@+id/conclusionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Заключення:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/masuredTv" />

    <TextView
        android:id="@+id/conclusionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/conclusionInfo"
        app:layout_constraintStart_toEndOf="@+id/conclusionInfo"
        app:layout_constraintTop_toTopOf="@+id/conclusionInfo"
        tools:text="Показники в нормі" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/measureGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="masureProgressBar,masureInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>